<%- include("../partials/_navbar") %>

<h1>Here's all the appointments</h1>

<ul>
  <% appointments.forEach(appointment => { %>
<li>
  <%= appointment.dateTime.toLocaleString() %>
  <a href="/appointment/<%= appointment._id %>">View</a>
  <a href="/appointment/<%= appointment._id %>/edit">Edit</a>
  <form action="/appointment/<%= appointment._id %>?_method=DELETE" method="POST">
    <button type="submit">Cancel</button>
  </form>
</li>
  <% }) %>
</ul>

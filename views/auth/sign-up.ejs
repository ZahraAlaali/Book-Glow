<link rel="stylesheet" href="../../stylesheets/sign-up.css" />
<link rel="stylesheet" href="../../stylesheets/nav.css" />
<link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Cardo:ital,wght@0,400;0,700;1,400&family=Cinzel:wght@400..900&display=swap" rel="stylesheet">

<%- include('../partials/_navbar') %>

<div class="sign-container">
  <h1>Sign Up</h1>

  <form action="/auth/sign-up" method="post">
    <label for="username">Username</label>
    <input type="text" name="username" id="username" required />

    <label for="email">Email</label>
    <input type="email" name="email" id="email" required />

    <label for="phone">Phone Number</label>
    <input type="number" name="phone" id="phone" min="0" required />
    <br />
    <label for="role">Role</label>
    <select name="role" id="role">
      <option value="owner">Owner</option>
      <option value="user">Customer</option>
    </select>
    <br />
    <label for="password">Password</label>
    <input type="password" name="password" id="password" required />
    <br />
    <label for="confirmPassword">Confirm Password</label>
    <input
      type="password"
      name="confirmPassword"
      id="confirmPassword"
      required
    />

    <button type="submit">Sign Up</button>
  </form>
</div>
